{
  "name": "living-archipelago",
  "version": "0.1.0",
  "description": "Agent-based simulation where ecology, economy, and AI agents co-evolve",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/runner/headless.ts",
    "dev:server": "tsx src/server/api-server.ts",
    "dev:web": "cd packages/web && npm run dev",
    "simulate": "tsx src/runner/headless.ts",
    "observe": "tsx src/runner/observer.ts",
    "server": "tsx src/server/api-server.ts",
    "verify-llm": "tsx src/llm/verify-connection.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:determinism": "vitest run --testPathPattern=determinism",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "simulation",
    "agent-based",
    "economics",
    "ecology"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "eslint": "^8.55.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  }
}
